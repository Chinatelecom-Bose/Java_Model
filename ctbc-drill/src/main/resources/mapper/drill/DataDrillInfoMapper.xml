<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ctbc.drill.mapper.DataDrillInfoMapper">
    
    <resultMap type="DataDrillInfo" id="DataDrillInfoResult">
        <result property="id"    column="id"    />
        <result property="reportName"    column="report_name"    />
        <result property="status"    column="status"    />
        <result property="description"    column="description"    />
        <result property="createBy"    column="created_id"    />
        <result property="createTime"    column="created_time"    />
        <result property="updateBy"    column="updated_id"    />
        <result property="updateTime"    column="updated_time"    />
    </resultMap>

    <sql id="selectDataDrillInfoVo">
        select id, report_name, status, description, created_id, created_time, updated_id, updated_time 
        from data_drill_info
    </sql>

    <select id="selectDataDrillInfoById" parameterType="Integer" resultMap="DataDrillInfoResult">
        <include refid="selectDataDrillInfoVo"/>
        where id = #{id}
    </select>

    <select id="selectDataDrillInfoList" parameterType="DataDrillInfo" resultMap="DataDrillInfoResult">
        <include refid="selectDataDrillInfoVo"/>
        <where>  
            <if test="reportName != null  and reportName != ''"> and report_name like concat('%', #{reportName}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="createBy != null  and createBy != ''"> and created_id = #{createBy}</if>
        </where>
        order by created_time desc
    </select>

    <select id="selectDataDrillInfoWithNodes" parameterType="Integer" resultMap="DataDrillInfoResult">
        <include refid="selectDataDrillInfoVo"/>
        where id = #{id}
    </select>

    <insert id="insertDataDrillInfo" parameterType="DataDrillInfo" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into data_drill_info (report_name, status, description, created_id, created_time, updated_time)
        values (#{reportName}, #{status}, #{description}, #{createBy}::int4, #{createTime}, #{updateTime})
    </insert>

    <update id="updateDataDrillInfo" parameterType="DataDrillInfo">
        update data_drill_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="reportName != null and reportName != ''">report_name = #{reportName},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="description != null and description != ''">description = #{description},</if>
            <if test="updateBy != null and updateBy != ''">updated_id = #{updateBy},</if>
            <if test="updateTime != null">updated_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDataDrillInfoById" parameterType="Integer">
        delete from data_drill_info where id = #{id}
    </delete>

    <delete id="deleteDataDrillInfoByIds" parameterType="Integer">
        delete from data_drill_info where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
